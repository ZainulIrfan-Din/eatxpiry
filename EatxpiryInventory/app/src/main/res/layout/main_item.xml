<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:backgroundTint="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idfoodname"
        android:text="Food Name"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idexpirydate"
        android:text="Expiry Date"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/idfoodname"
        />

        <TextView
            android:id="@+id/idlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idexpirydate"
            android:text="Location"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/idlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:backgroundTint="@color/greeneatx"
                android:layout_marginRight="5dp"
                android:id="@+id/idBtnEdit"/>

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/greeneatx"
                android:layout_marginLeft="5dp"
                android:id="@+id/idBtnDelete"/>

        </LinearLayout>

</RelativeLayout>








</androidx.cardview.widget.CardView>