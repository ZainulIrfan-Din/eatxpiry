<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SETTINGSPAGE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/linear_ll"
        android:orientation="horizontal"
        android:background="#5c913b">

        <ImageView
            android:id="@+id/backbutton2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/backbutton2"
            android:layout_marginTop="0mm"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_ll"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifications"
            android:layout_marginTop="-9mm"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-9mm"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Switch
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="-3mm"
            android:text="Push Notification"
            android:textColor="@color/black" />

        <Switch
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="3mm"
            android:text="Email updates and offers"
            android:textColor="@color/black"/>

        <Switch
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="9mm"
            android:text="Calendar"
            android:textColor="@color/black"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_ll"
        android:background="@color/black"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/policy" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Privacy and Policy"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/policybtn"
            android:src="@drawable/policybtn"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_ll"
        android:background="@color/black"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

</LinearLayout>